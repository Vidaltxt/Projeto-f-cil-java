    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        // TODO add your handling code here:
        
        int num_alunos,i;
        float media,max,min,soma,nota;
        soma=0;
        max=-1;
        min=21;
             num_alunos=Integer.parseInt(jTextField1.getText());
      for(i=1;i<=num_alunos;i++){
                    nota=Float.parseFloat(JOptionPane.showInputDialog(this,"Insira a nota do aluno","Média",3));
                    soma=soma+num_alunos;
      if(nota>max){
                     max=nota;
       }
      else if(nota<min){
                    min=nota;
      }
      else{
                    JOptionPane.showInputDialog(this, "ERRO I GUESS", "Média", 3);
      } 
      media=soma/num_alunos;
      jTextField2.setText(String.valueOf(media));
      jTextField3.setText(String.valueOf(max));
      jTextField4.setText(String.valueOf(min));
      }
        
        
        
        
        
        
    }                                        

